<Aquachain>:
    BoxLayout:
        elevation: 1
        orientation: 'horizontal'
        BoxLayout:
            elevation: 10
            orientation: 'vertical'
            size_hint_x: .35
            BoxLayout:
                GridLayout:
                    cols: 1
                    BoxLayout:
                        orientation: 'vertical'
                        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                        size_hint_y:10
                        Image:
                            source: 'img/aquachainx5.png'
                    BoxLayout:
                        orientation: 'vertical'
                        size_hint_y: 15
                        MDList:
                            TwoLineIconListItem:
                                id: block
                                text: "Loading..."
                                secondary_text: "Current block"
                                on_release:
                                    print(block)
                                    root.popup_block(root.head)
                                IconLeftWidget:
                                    id:li_icon_1
                                    icon: 'emby'

                            TwoLineIconListItem:
                                id: balance
                                text: ""
                                secondary_text: "Total Balance"
                                font_style: 'Body1'
                                on_release:
                                    self.text = root.toggle_display_balance(self.text)
                                IconLeftWidget:
                                    id: li_icon_2
                                    icon: 'eye-off' if root.ids.balance.text == 'Click to Show' else 'eye'
                                    icon_color: self.theme_cls.primary_color
                    MDSeparator:
                    BoxLayout:
                        size_hint_y: 33
                        ScrollView:
                            do_scroll_x: False
                            MDList:
                                OneLineIconListItem:
                                    text: "My Wallets"
                                    bold: True
                                    halign: "center"
                                    on_release:
                                        root.switch_view('coinbasechooser', 'up')
                                    IconLeftWidget:
                                        id: li_icon_3
                                        icon: 'fish'
                                OneLineIconListItem:
                                    text: "Send/Transfer"
                                    bold: True
                                    on_release:
                                        root.switch_view('send', 'up')
                                    IconLeftWidget:
                                        id: li_icon_1
                                        icon: 'arrow-right-bold-circle-outline'
                                OneLineIconListItem:
                                    text: "Address List"
                                    bold: True
                                    on_release:
                                        root.switch_view('addresses', 'down')
                                    IconLeftWidget:
                                        id: li_icon_3
                                        icon: 'contact-mail'
                                MDSeparator:
                                OneLineIconListItem:
                                    text: "Blockchain"
                                    bold: True
                                    on_release:
                                        root.switch_view('blockchain', 'left')
                                    IconLeftWidget:
                                        id: li_icon_2
                                        icon: 'cube-outline'




        BoxLayout:
            orientation: 'vertical'
            BoxLayout:
                orientation: 'vertical'
                MDToolbar:
                    id: toolbar
                    opposite_colors: True
                    right_action_items:
                        [['settings', lambda x: app.open_settings()],
                        ['lock' if root.ids.scr_mngr.current == 'welcome' else 'lock-open-outline', lambda x: root.lock()],
                        ['home', lambda x: root.switch_view('welcome', 'left')],
                        ['magnify', lambda x: root.switch_view('search', 'left')]]
                ScreenManager:
                    id: scr_mngr
                    MDScreen:
                        name: 'welcome'
                        #md_bg_color: app.theme_cls.primary_color
                        BoxLayout:
                            orientation: 'vertical'
                            padding: dp(50)
                            spacing: 20
                            MDCard:
                                padding: dp(25)
                                ScrollView:
                                    do_scroll_x: False
                                    GridLayout:
                                        cols: 1
                                        MDLabel:
                                            text: 'Welcome to your Aquachain wallet'
                                            font_style: "H5"
                                            color: 1,1,1,1
                                            halign: "center"

                                        MDSeparator:
                                        MDLabel:
                                            pos_hint: {'center_x': 0.5, 'center_y': 1}
                                            text: 'How would you like to proceed?'
                                            color: self.theme_cls.primary_color
                                            font_style: "Body1"
                                            halign: 'center'
                                        BoxLayout:
                                            MDCheckbox:
                                                id: account_use_file
                                                size_hint: None, None
                                                size: "55dp", "34dp"
                                                pos_hint: {'center_x': 0, 'center_y': .5}
                                                group: 'seedaction'
                                                active: True
                                            MDLabel:
                                                text: "Load Saved"
                                                color: 1, 1, 1, 1
                                                font_style: "Body1"
                                        BoxLayout:
                                            MDCheckbox:
                                                id: account_use_import
                                                size_hint: None, None
                                                size: "55dp", "34dp"
                                                pos_hint: {'center_x': 0, 'center_y': .5}
                                                group: 'seedaction'
                                            MDLabel:
                                                color: 1, 1, 1, 1
                                                text: "Import seed"
                                                font_style: "Body1"
                                        BoxLayout:
                                            MDCheckbox:
                                                id: account_use_new
                                                size_hint: None, None
                                                size: "55dp", "34dp"
                                                pos_hint: {'center_x': 0, 'center_y': .5}
                                                group: 'seedaction'
                                            MDLabel:
                                                text: "Create new seed"
                                                color: 1, 1, 1, 1
                                                font_style: "Body1"
                                        BoxLayout:
                                            MDCheckbox:
                                                id: account_use_node
                                                size_hint: None, None
                                                size: "55dp", "34dp"
                                                pos_hint: {'center_x': 0, 'center_y': .5}
                                                group: 'seedaction'
                                            MDLabel:
                                                color: 1, 1, 1, 1
                                                text: "RPC Node(View Only)"
                                                font_style: "Subtitle1"
                                        BoxLayout:
                                        MDSeparator:
                                        BoxLayout:
                                            BoxLayout:
                                            BoxLayout:
                                            BoxLayout:
                                                spacing: 10
                                                MDFlatButton:
                                                    text: "View only"
                                                    theme_text_color: "Custom"
                                                    text_color: 1, 1, 1, .8
                                                    on_release: root.open_account(viewonly=True)
                                            BoxLayout:
                                                spacing: 10
                                                MDFlatButton:
                                                    text: "CONTINUE"
                                                    bold: True
                                                    theme_text_color: "Custom"
                                                    text_color: app.theme_cls.primary_color
                                                    on_release: root.open_account(viewonly=False)
                    Screen:
                        name: 'send'
                        ScrollView:
                            do_scroll_x: False
                            BoxLayout:
                                orientation: 'vertical'
                                size_hint_y: 1
                                height: self.minimum_height
                                padding: (self.width/8), (self.height/8)
                                # spacing: 20
                                MDCard:
                                    orientation: 'vertical'
                                    MDList:
                                        id:newlist
                                        valign: 'top'
                                        padding: 0,0
                                    BoxLayout:
                                        orientation: 'vertical'
                                        padding: dp(40)
                                        BoxLayout:
                                            padding: dp(15)
                                            MDTextField:
                                                id: send_addr
                                                valign: 'top'
                                                hint_text: "Destination Address"
                                                helper_text: "Not a correct address. Enter a correct wallet address."
                                                max_text_length: 42
                                                helper_text_mode: "on_error"
                                        BoxLayout:
                                            padding: dp(15)
                                            MDTextField:
                                                id: amount
                                                hint_text: "Amount"
                                                helper_text: "Enter the amount you would like to send"
                                                helper_text_mode: "on_focus"
                                        BoxLayout:
                                            id: passphrase
                                            padding: dp(15)
                                        BoxLayout:
                                            orientation: 'horizontal'
                                            BoxLayout:
                                            BoxLayout:
                                                spacing: 10
                                            BoxLayout:
                                                spacing: 10
                                                padding: dp(40)
                                                MDRaisedButton:
                                                    text: 'SEND'
                                                    on_release:
                                                        root.send_confirm(root.coinbase, send_addr.text, amount.text)

                    Screen:
                        name:'addresses'
                        BoxLayout:
                            padding: (self.width/11), (self.height/11)
                            height: self.minimum_height
                            MDCard:
                                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                                TabbedPanel:
                                    id: addr_pan
                                    do_default_tab: False
                                    TabbedPanelItem:
                                        name:'contacts'
                                        id: contacts
                                        text: 'Saved'
                                        ScrollView:
                                            scroll_type: ['content', 'bars']
                                            size_hint: (1, 1)
                                            GridLayout:
                                                size_hint: 1, 1
                                                height: self.minimum_height
                                                cols:2
                                                padding: 0
                                                spacing: -10
                                                id: saved_cont


                                    TabbedPanelItem:
                                        name: 'recent'
                                        id: recent
                                        text: 'Recent Tx'
                                        ScrollView:
                                            id: recent_scr
                                            scroll_type: ['content', 'bars']
                                            size_hint: (1, 1)
                                            recent_cont: recent_cont
                                            GridLayout:
                                                id: recent_cont
                                                size_hint: 1, 1
                                                height: self.minimum_height
                                                cols:3
                                                padding: 0
                                                spacing: -10


                                            # size_hint_y: 1
                                            # row_default_height:40




                    Screen:
                        name:'blockchain'
                        BoxLayout:
                            padding: (self.width/11), (self.height/11)
                            height: self.minimum_height
                            MDCard:
                                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                                TabbedPanel:
                                    id: blocktabs
                                    do_default_tab: False
                                    TabbedPanelItem:
                                        name:'blocktab'
                                        id: blocktab
                                        text: 'Blockchain'
                                        ScrollView:
                                            scroll_type: ['content', 'bars']
                                            size_hint: (1, 1)
                                            GridLayout:
                                                size_hint: 1, None
                                                height: self.minimum_height
                                                cols:6
                                                padding: 0
                                                spacing: -20 ,-10
                                                # size_hint_y: 1
                                                # row_default_height:40
                                                id: container1
                                                orientation: 'lr-tb'
                                    TabbedPanelItem:
                                        name: 'histtab'
                                        id: histtab
                                        text: 'Tx History'
                                        ScrollView:
                                            scroll_type: ['content', 'bars']
                                            size_hint: (1, 1)
                                            GridLayout:
                                                size_hint: 1, None
                                                height: self.minimum_height
                                                cols:3
                                                padding: 0
                                                spacing: -10
                                                # size_hint_y: 1
                                                # row_default_height:40
                                                id: hist_tx
                                                orientation: 'lr-tb'
                                    TabbedPanelItem:
                                        name: 'searchtab'
                                        id: searchtab
                                        text: 'Search'
                                        ScrollView:
                                            scroll_type: ['content', 'bars']
                                            size_hint: (1, 1)
                                            GridLayout:
                                                cols: 1
                                                row_default_height: dp(20)
                                                BoxLayout:
                                                    padding: dp(30)
                                                    size_hint_y: .4
                                                    BoxLayout:
                                                        size_hint_x: .7
                                                        # padding: dp(10), dp(20)
                                                        height: self.minimum_height
                                                        MDTextField:
                                                            id: blockchain_search_query
                                                            hint_text: 'Block hash, TX hash, or public address'
                                                            multiline: False
                                                            on_text_validate: root.blockchain_search()
                                                    BoxLayout:
                                                        padding: dp(15)
                                                        size_hint_x: .3
                                                        MDRaisedButton:
                                                            text: 'Search!'
                                                            on_release: root.blockchain_search()
                                                BoxLayout:
                                                    size_hint_y: .9
                                                    padding: dp(10)
                                                    id: blockchain_search_content
                                                    orientation: 'vertical'

                    Screen:
                        name: 'coinbasechooser'
                        id: coinbasechooser
                        BoxLayout:
                            padding: (self.width/8), (self.height/8)
                            MDCard:
                                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                                TabbedPanel:
                                    do_default_tab: False
                                    TabbedPanelItem:
                                        name:'coinbasetab'
                                        id: 'coinbasetab'
                                        text: 'HD'
                                        ScrollView:
                                            do_scroll_x: False
                                            scroll_type: ['content', 'bars']
                                            size_hint: (1, 1)
                                            GridLayout:
                                                size_hint_y: None
                                                spacing: -15, -10
                                                # size_hint_x: 0.8
                                                height: self.minimum_height
                                                #halign: 'center'
                                                #padding: dp(16)
                                                cols:3
                                                # row_default_height: dp(30)
                                                id: cbasegrid
                                                #orientation: 'vertical'
                                    TabbedPanelItem:
                                        name: 'coinbasetab2'
                                        id: 'coinbasetab2'
                                        text: 'RPC'
                                        ScrollView:
                                            do_scroll_x: False
                                            scroll_type: ['content', 'bars']
                                            size_hint: (1, 1)
                                            GridLayout:
                                                size_hint_y: None
                                                spacing: -15, -10
                                                height: self.minimum_height
                                                cols:3
                                                id: cbasegrid2
